#allgemeinen Button definieren -->
<Button>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos

    font_size: 70
    background_color: 1, 0, 1, 1


<TextInput>:
    multiline: False
    disabled: True
    font_size: 40

#=======================================================================================================================
#WindowManager zur Verwaltung der verschiedenen Fenster
WindowManager:

    #alle Fenster in der Einrückung vom Windowmanager -->
    HomeFenster:
    AutoRechnerFenster:
    AutoRechnungenFenster:
    ManuellRechnerFenster:
    ManuellRechnungenFenster:
    PreRechnerFenster:
    RaketenGleichungFenster:
    RaketenGleichungRechnerFenster:
    FallschirmGleichungFenster:
    FallschirmGleichungRechnerFenster:
    RocketLocationFenster:



#=======================================================================================================================
<HomeFenster>:

    #individueller Kivy Name für das Fenster --->
    name: "home"

    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            size: self.size
            pos: self.pos


    Image:
        source: "space2.png"
        size_hint: 1, 1
        pos_hint: {"x":0, "y":0.35}


    Label:
        text: "WaterRocketX"
        size_hint: 0.8, 0.2
        pos_hint: {"x": 0.1, "y":0.725}
        font_size: 130


    #Button für automatische Eingaben
    Button:
        text: "Live-Berechnungen\n         [AUTO]"
        size_hint: 0.8, 0.1
        pos_hint: {"x":0.1, "y":0.5}
        on_release:
            app.root.current="auto_rechner"
            root.manager.transition.direction="left"


    #Button für manuelle Eingaben
    Button:
        text: "Live-Berechnungen\n      [MANUAL]"
        size_hint: 0.8, 0.1
        pos_hint: {"x":0.1, "y":0.35}
        on_release:
            app.root.current="manuell_rechner"
            root.manager.transition.direction="left"

    Button:
        text: "Pre-Berechnungen"
        size_hint: 0.8, 0.1
        pos_hint: {"x":0.1, "y":0.2}
        on_release:
            app.root.current="pre_rechner"
            root.manager.transition.direction="left"

    Button:
        text: "Rocket-Location"
        size_hint: 0.8, 0.1
        pos_hint: {"x":0.1, "y":0.05}



