#allgemeinen Button definieren -->
<Button>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos

    font_size: 30
    background_color: 1, 0, 1, 1


<TextInput>:
    multiline: False
    disabled: True

#=======================================================================================================================
#WindowManager zur Verwaltung der verschiedenen Fenster
WindowManager:

    #alle Fenster in der Einrückung vom Windowmanager -->
    HomeFenster:
    AutoRechnerFenster:
    AutoRechnungenFenster:
    ManuellRechnerFenster:
    ManuellRechnungenFenster:



#=======================================================================================================================
<HomeFenster>:

    #individueller Kivy Name für das Fenster --->
    name: "home"

    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            size: self.size
            pos: self.pos


    Image:
        source: "space2.png"
        size_hint: 1, 1
        pos_hint: {"x":0, "y":0.3}


    Label:
        text: "WaterRocketX"
        size_hint: 0.8, 0.2
        pos_hint: {"x": 0.1, "y":0.7}
        font_size: 60


    #Button für automatische Eingaben
    Button:
        text: "Live-Berechnungen\n         [AUTO]"
        size_hint: 0.8, 0.15
        pos_hint: {"x":0.1, "y":0.5}
        on_release:
            app.root.current="auto_rechner"
            root.manager.transition.direction="left"


    #Button für manuelle Eingaben
    Button:
        text: "Live-Berechnungen\n      [MANUAL]"
        size_hint: 0.8, 0.15
        pos_hint: {"x":0.1, "y":0.3}
        on_release:
            app.root.current="manuell_rechner"
            root.manager.transition.direction="left"

    Button:
        text: "Pre-Berechnungen"
        size_hint: 0.8, 0.15
        pos_hint: {"x":0.1, "y":0.1}
        


#=======================================================================================================================
<AutoRechnerFenster>:

    #individueller Kivy Name für das Fenster --->
    name: "auto_rechner"


    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            size: self.size
            pos: self.pos


    Image:
        source: "space2.png"
        size_hint: 1, 1
        pos_hint: {"x":0, "y":0.3}


    Label:
        text: "Live-Berechnungen"
        size_hint: 0.8, 0.2
        pos_hint: {"x": 0.1, "y":0.8}
        font_size: 60
    Label:
        text: "[AUTO]"
        size_hint: 0.8, 0.1
        pos_hint: {"x":0.1, "y":0.7}
        font_size: 60

    FloatLayout:
        size_hint: 0.3,0.1
        pos_hint: {"x":0.1, "y":0.55}
        canvas.before:
            Color:
                rgba: 1,0,1,1
            Rectangle:
                size: self.size
                pos: self.pos
    #Start Knopf
    Label:
        text: "START:"
        size_hint: 0.3, 0.1
        pos_hint: {"x":0.1, "y":0.55}
        font_size: 30
    TextInput:
        size_hint: 0.4, 0.1
        pos_hint: {"x":0.5, "y":0.55}


    FloatLayout:
        size_hint: 0.3,0.1
        pos_hint: {"x":0.1, "y":0.4}
        canvas.before:
            Color:
                rgba: 1,0,1,1
            Rectangle:
                size: self.size
                pos: self.pos
    #Wende Knopf
    Label:
        text: "WENDE:"
        size_hint: 0.3, 0.1
        pos_hint: {"x":0.1, "y":0.4}
        font_size: 30
    TextInput:
        size_hint: 0.4, 0.1
        pos_hint: {"x":0.5, "y":0.4}



    FloatLayout:
        size_hint: 0.3,0.1
        pos_hint: {"x":0.1, "y":0.25}
        canvas.before:
            Color:
                rgba: 1,0,1,1
            Rectangle:
                size: self.size
                pos: self.pos
    #Ende Knopf
    Label:
        text: "ENDE:"
        size_hint: 0.3, 0.1
        pos_hint: {"x":0.1, "y":0.25}
        font_size: 30
    TextInput:
        id: ende_manual
        size_hint: 0.4, 0.1
        pos_hint: {"x":0.5, "y":0.25}

    #zurück Knopf:
    Button:
        text: "HOME"
        size_hint: 0.3, 0.1
        pos_hint: {"x":0.15, "y":0.05}
        on_release:
            app.root.current="home"
            root.manager.transition.direction="right"

    #rechne Knopf:
    Button:
        text: "RECHNE"
        size_hint: 0.3, 0.1
        pos_hint: {"x":0.55, "y":0.05}



#=======================================================================================================================
